function handleLikeClick(tweetId){
    const targetTweetObj = tweetsData.find((tweet) => tweet.uuid === tweetId)
    
    if (targetTweetObj) {
        targetTweetObj.likes += 1
    }
    console.log(targetTweetObj)
}

