    text-align: left;
}

.img-main{
    width: 120px;
    margin: 0 auto;
    border-radius: 50%;
}

// ==============================

// Instructor Solution

.main-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    
    padding-top: 2.5em; /* 40 / 16 = 2.5 */
    padding-left: 2em; /* 32 / 16 = 2 */
    padding-right: 2em;
}

.img-main {
    width: 120px;
    border-radius: 50%;
}

