function renderGameStatus() {
        if (!isGameOver) {
            return null
        }

        if (isGameWon) {
            return (
                <>
                    <h2>You win!</h2>
                    <p>Well done! üéâ</p>
                </>
            )
        } else {
            return (
                <>
                    <h2>Game over!</h2>
                    <p>You lose! Better start learning Assembly üò≠</p>
                </>
            )
        }
    }

<section className={gameStatusClass}>
    {renderGameStatus()}
</section>

