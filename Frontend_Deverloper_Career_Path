// That is then rendered to the DOM using a function called ReactDOM.render()

<html>
    <head>
        <link rel="stylesheet" href="/index.css">
    </head>
    <body>
        <div id="root"></div>
        <script src="/index.jsx" type="module"></script>
    </body>
</html>

